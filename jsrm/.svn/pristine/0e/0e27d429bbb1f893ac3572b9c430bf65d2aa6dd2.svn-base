.center{
    text-align: center;
}

.btn-normal{
    width: 82px;
    height: 30px;
    background: #2196f3;
    color: #fff;
    border-radius: 3px;
    line-height: 30px;
    text-align: center;
    display: inline-block;
    margin-left: 48px;
    cursor: pointer;
    float: none;
}
.btn-cancel{
    background-color: #a9aaab;
}
.wrap_date .title{
    float: left;
    line-height: 30px;
    font-size: 14px;
}
.list_nav{
    width: 250px;
    background: #fff;
    box-sizing: border-box;
    overflow: auto;
}
.main_con{
    width: 250px;
    background: #fff;
    font-size: 12px;
    float: left;
}

.perm-title{
    padding: 10px 0 6px 0;
    font-size: 14px;
}
.perm-list{
    padding: 15px 0 16px 0;
}
.perm-item{
    background-color: #fcf8e3;
    padding: 16px;
    margin-bottom: 16px;
    line-height: 30px;
    overflow: hidden;
}
.perm-item-nb{margin-bottom:0;padding-bottom:0;}
.perm-item-nt{padding-top:0;}
