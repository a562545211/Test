.main{
    font-size: 14px;
    color: #666;
    background: #f7f7f7;
    padding-bottom: 20px;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.l30{
    line-height: 30px;
}
.mt10{
    margin-top: 10px;
}
.mt20{
    margin-top: 20px;
}
.h_auto{
    height: auto !important;
}
.bg_grey{
    background: #f2f6f9;
}
input{
    outline: none;
}
input[type='checkbox'], input[type='radio']{
    margin:0 8px 0 0;
}
table{
    margin-bottom: 0!important;
}
dt{
    /* line-height: 14px; */
}
.clearfix { *zoom: 1; }
.clearfix:after { content: ""; display: table; clear: both; }
.main{
    width: 96%;
    min-width: 0;
    padding: 5px 2%;
}
.main>div{
    background: white;
    margin-bottom: 16px;
    padding: 10px 10px 10px 30px;
}
.topic{
    background: #fbfcff;
    padding-left: 15px!important;
    margin-top: 15px;
}
.topic h2{
    font-size: 14px;
    margin-right: 50px;
    font-weight: normal;
    padding: 7px;
}
.topic_nav li{
    float: left;
    margin-right: 40px;
    padding: 7px;
}
.topic_nav li.cur{
    background: #b3daf9;
    border-radius: 4px;
}
.user_info input{
    width: 400px;
    height: 28px;
    border: 1px solid #e9e9e9;
    line-height: 28px;
    padding: 0 15px;
    box-sizing: border-box;
    margin: 0 15px;
}
.user_info{
    font-size: 12px;
    padding: 15px 10px 15px 30px!important;
}
.user_info .infogroup{
    padding-bottom: 15px;
}
.user_info .infogroup.last{
    padding-bottom: 0;
}

