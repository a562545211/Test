
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>权限管理 查看</title>
    <link rel="stylesheet" href="../../css/public.css">
    <link rel="stylesheet" href="../../css/perm.css">
    <script src="../../js/lib/jquery-1.12.1.js"></script>
</head>
<body>

<div class="main">
    <!--nav-->
    <div class="topic clearfix">
        <h2 class="fl">权限管理</h2>
        <ul class="topic_nav">
            <li><a href="#">用户管理</a></li>
            <li class="cur"><a href="#">权限管理</a></li>
            <li><a href="#">操作日志</a></li>
        </ul>
    </div>

    <!--角色名称／描述-->
    <div class="user_info clearfix">
        <div class="infogroup">
            <label for="role-name">角色名称</label>
            <input type="text" name="role-name" title="role-name" id="role-name">
        </div>
        <div class="infogroup last">
            <label for="role-desc" class="mr10">角色描述</label>
            <input type="text" name="role-desc" title="role-desc" id="role-desc">
        </div>

    </div>
    <!--main_con-->
    <div class="clearfix">
        <h3 class="perm-title">权限设置</h3>
        <div class="perm-list">
            <!--资源管理-->
            <dl class="perm-item">
                <dt>
                    <input type="checkbox" name="res-man" id="res-man"><label for="res-man">资源管理</label>
                </dt>
                <dd>
                    <input type="checkbox" name="res-man-edit" id="res-man-edit"><label for="res-man-edit">编辑</label>
                </dd>
                <dd>
                    <input type="checkbox" name="res-man-download" id="res-man-download"><label for="res-man-download">下载</label>
                </dd>
                <dd>
                    <input type="checkbox" name="res-man-upload" id="res-man-upload"><label for="res-man-upload">上传</label>
                </dd>
                <dd>
                    <input type="checkbox" name="res-man-del" id="res-man-del"><label for="res-man-del">删除</label>
                </dd>
            </dl>

            <!--选题发稿-->
            <dl class="perm-item">
                <dt>
                    <input type="checkbox" name="select-post" id="select-post"><label for="select-post">选题发稿</label>
                </dt>
                <dd>
                    <input type="checkbox" name="select-post-edit" id="select-post-edit"><label for="select-post-edit">编辑</label>
                </dd>
                <dd>
                    <input type="checkbox" name="select-post-export" id="select-post-export"><label for="select-post-export">导出</label>
                </dd>
                <dd>
                    <input type="checkbox" name="select-post-send" id="select-post-send"><label for="select-post-send">发稿</label>
                </dd>
            </dl>

            <!--资源审核-->
            <dl class="perm-item">
                <dt>
                    <input type="checkbox" name="res_check" id="res-check"><label for="res-check">资源审核</label>
                </dt>
                <dd>
                    <div class="col">
                        <dl>
                            <dt>
                                <input type="checkbox" name="upload-check" id="upload-check"><label for="upload-check">上传审核</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="upload-check-edit" id="upload-check-edit"><label for="upload-check-edit">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="upload-check-download" id="upload-check-download"><label for="upload-check-download">下载</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="upload-check-check" id="upload-check-check"><label for="upload-check-check">审核</label>
                            </dd>
                        </dl>

                        <dl>
                            <dt>
                                <input type="checkbox" name="post-check" id="post-check"><label for="post-check">发稿审核</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="post-check-edit" id="post-check-edit"><label for="post-check-edit">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="post-check-download" id="post-check-download"><label for="post-check-download">下载</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="post-check-check" id="post-check-check"><label for="post-check-check">审核</label>
                            </dd>
                        </dl>
                    </div>
                </dd>
            </dl>

            <!--编目管理-->
            <dl class="perm-item">
                <dt>
                    <input type="checkbox" name="item-man" id="item-man"><label for="item-man">编目管理</label>
                </dt>
                <dd>
                    <div class="col">
                        <dl>
                            <dt>
                                <input type="checkbox" name="num-man" id="num-man"><label for="num-man">编号管理</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="num-man-edit" id="num-man-edit"><label for="num-man-edit">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="num-man-upload" id="num-man-upload"><label for="num-man-upload">上传</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="num-man-del" id="num-man-del"><label for="num-man-del">删除</label>
                            </dd>
                        </dl>

                        <dl>
                            <dt>
                                <input type="checkbox" name="dir-man" id="dir-man"><label for="dir-man">目录管理</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="dir-man-edit" id="dir-man-edit"><label for="dir-man-edit">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="dir-man-upload" id="dir-man-upload"><label for="dir-man-upload">上传</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="dir-man-del" id="dir-man-del"><label for="dir-man-del">删除</label>
                            </dd>
                        </dl>
                    </div>
                    <div class="col">
                        <dl>
                            <dt>
                                <input type="checkbox" name="num-man1" id="num-man1"><label for="num-man1">编号管理</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="num-man-edit1" id="num-man-edit1"><label for="num-man-edit1">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="num-man-upload1" id="num-man-upload1"><label for="num-man-upload1">上传</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="num-man-del1" id="num-man-del1"><label for="num-man-del1">删除</label>
                            </dd>
                        </dl>

                        <dl>
                            <dt>
                                <input type="checkbox" name="dir-man1" id="dir-man1"><label for="dir-man1">目录管理</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="dir-man-edit1" id="dir-man-edit1"><label for="dir-man-edit1">编辑</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="dir-man-upload1" id="dir-man-upload1"><label for="dir-man-upload1">上传</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="dir-man-del1" id="dir-man-del1"><label for="dir-man-del1">删除</label>
                            </dd>
                        </dl>
                    </div>
                </dd>
            </dl>

            <!--统计分析-->
            <dl class="perm-item">
                <dt>
                    <input type="checkbox" name="stat-analy" id="stat-analy"><label for="stat-analy">统计分析</label>
                </dt>
                <dd>
                    <div class="col">
                        <dl>
                            <dt>
                                <input type="checkbox" name="work-stat" id="work-stat"><label for="work-stat">工作统计</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="work-stat-export" id="work-stat-export"><label for="work-stat-export">导出</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="work-stat-personal" id="work-stat-personal"><label for="work-stat-personal">个人</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="work-stat-all" id="work-stat-all"><label for="work-stat-all">全部</label>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                <input type="checkbox" name="res-stat" id="res-stat"><label for="res-stat">资源统计</label>
                            </dt>
                            <dd>
                                <input type="checkbox" name="res-stat-export" id="res-stat-export"><label for="res-stat-export">导出</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="res-stat-personal" id="res-stat-personal"><label for="res-stat-personal">个人</label>
                            </dd>
                            <dd>
                                <input type="checkbox" name="res-stat-all" id="res-stat-all"><label for="res-stat-all">全部</label>
                            </dd>
                        </dl>
                    </div>
                </dd>
            </dl>
        </div>

        <div class="btn-group center">
            <button class="btn-normal btn-enter">确定</button>
            <button class="btn-normal btn-cancel">取消</button>
        </div>
    </div>

</div>
</body>
</html>