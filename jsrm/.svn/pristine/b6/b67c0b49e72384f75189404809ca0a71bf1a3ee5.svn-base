*{padding:0;margin:0;list-style: none;}
body{background:#EBECF1;}
.login{
	width:930px;
	height:369px;
	margin:10% auto 0;
}
.login_pic{
	width:462px;
	height:369px;
	background: url(../images/login.png);
	float:left;
}
.login_box{
	width:379px;
	height:367px;
	float:right;
	border:1px solid #BFBEC3;
	text-align: center;
	background: white;
}
.login_box>span{
	font-size:20px ;
	color:#2196F3;
	line-height:96px;
}
.login_box ul li{
	width:335px;
	height:42px;
	border:2px solid #E8ECEF;
	margin:0 auto;
}
.login_box ul li i{
	width:53px;
	height:42px;
	background:red;
}
.login_box ul li.login_name{
	margin-bottom: 22px;
	background: url(../images/yonghu.png) no-repeat;
}
.login_box ul li.login_pass{
	background: url(../images/mima.png) no-repeat;
}
.re_pass{
	width:335px;
	margin:0 auto;
	height:68px;
	line-height:68px;
	text-align:left;
	font-size:14px;
}
input[type='checkbox']{
	margin:0 9px 0 0;
}
button{width:335px;height:42px;background: #2196F3;color:white;font-size: 20px;float:none;}
button>span{margin:0 8px;}
.login_name input, .login_pass input{
	width:275px;
	height:30px;
	line-height:30px;
	margin-top:6px;
	border:none;
	float:right;
	font-size:14px;
	margin-left: 7px;
	outline: none;
	color:#666666;
}
.login_title{width:100%;height:63px;background: #2196F3}
.login_title img{
	margin:16px 20px 0 40px;
	float: left;
}
.login_title>span{line-height:63px;color:white;float: left;font-size: 18px}